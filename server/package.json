{
  "name": "language-server-example",
  "description": "Example implementation of a language server in node.",
  "version": "0.0.1",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "vscode-languageserver": "^3.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^6.0.52",
    "chai": "^4.0.2",
    "mocha": "^3.4.2",
    "pegjs": "^0.10.0",
    "typescript": "^2.1.5"
  },
  "scripts": {
    "parser": "node ./node_modules/pegjs/bin/pegjs -o ./src/parser/parser.js --cache ./src/parser/grammar.pegjs",
    "compile": "npm run parser && tsc -p . && installServerIntoExtension ../client ./package.json ./tsconfig.json",
    "watch": "installServerIntoExtension ../client ./package.json ./tsconfig.json && tsc --watch -p .",
    "test": "npm run compile & mocha ../client/server/test/**/*.js"
  }
}
